global _start

fn _start() {
    let x = 65
    loop {
        % infinite loop
        cmp x, 66 {
            eq {
                x = x + 1
                continue
            }
        }
        kprintc(itoc(x))
        x = x + 1
        cmp x, 68 {
            eq {
                break
            }
        }
    }
	return 0
}


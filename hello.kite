global _start
using stdio
using string
using process

fn _start(argc : int64, argv : ptr64) : byte {
	if argc == 2 {
		print("Hello, ")
		print(argv[1])
		print("!\n")
		return 0
	}
	if argc == 3 {
		if streq(argv[2], "-shout") {
			print("HELLO, ")
			print(argv[1])
			print("!!!!!!!!!!!!\n")
			return 0
		}
		err()
	}

	err()
}

fn err() : void {
	print("usage: hello <name> [-shout]\n")
	exit(1)
}
~
kprintc function
args:
    the character (stored in rdi)
usage example:
    kprint('V')
~
fn kprintc() {
    asm "mov rdx, 1"
    asm "mov rsi, rdi"
    asm "mov rax, 1"
    asm "mov rdi, 1"
    asm "syscall"
}
~
kprint function
args:
    the pointer to the string (stored in rdi)
usage example:
    kprint("Hello World!")
~
fn kprint() {
    asm "push rdi"
    asm "mov rax, 1"
    asm "mov rdi, 1"
    asm ".kprint_loop:"
    asm "    mov rsi, [rsp]"
    asm "    movzx rdx, byte [rsi]"
    asm "    test rdx, rdx"
    asm "    jz .kprint_done"
    asm "    mov rax, 1"
    asm "    mov rdi, 1"
    asm "    mov rdx, 1"
    asm "    syscall"
    asm "    inc rsi"
    asm "    mov [rsp], rsi"
    asm "    jmp .kprint_loop"
    asm ".kprint_done:"
    asm "    pop rdi"
}

~
itoc function
args:
    the ASCII integer (stored in rdi)
usage exmaple:
    itoc(65) % 'A'
~
fn itoc() {
    asm "sub rsp, 8"  
    asm "mov byte [rsp], dil"
    asm "lea rax, [rsp]"
    asm "add rsp, 8"  
}

~
kprintascii function
args:
    the ASCII integer (stored in rdi)
usage example:
    kprintascii(65) % prints A
~
fn kprintascii() {
    asm "push rdi"
    asm "mov rax, 1"
    asm "mov rdi, 1"
    asm "lea rsi, [rsp]"
    asm "mov rdx, 1"
    asm "syscall"
    asm "pop rdi"
}

~
kprinti function
args:
    the integer (stored in rdi)
usage example:
    kprinti(10) % prints 10
~
fn kprinti() {
    asm "mov rbp, 0"
    asm ".convert_loop:"
    asm "mov rax, rdi"
    asm "mov rbx, 10"
    asm "xor rdx, rdx"
    asm "div rbx"
    asm "push rdx"
    asm "inc rbp"
    asm "mov rdi, rax"
    asm "cmp rdi, 0"
    asm "je .convert_loop_end"
    asm "jmp .convert_loop"
    asm ".convert_loop_end:"
    asm ".print_loop:"
    asm "pop rdi"
    asm "add rdi, '0'"
    asm "call kprintascii"
    asm "dec rbp"
    asm "test rbp, rbp"
    asm "jz .print_end"
    asm "jmp .print_loop"
    asm ".print_end:"
}